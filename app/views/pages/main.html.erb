<div id="headerwrap">
  <div class="container">
    <div class="row">
      <div>
        <h1 class="claim"><%= t(:main_claim) %></h1>
        <div class="spacer"></div>
      </div>
    </div>
  </div>
</div> <!-- #headerwrap -->

<div class="container">
  <div class="row mt">
    <div class="col-lg-8">
      <h2 class="main-presentation"><%= t(:main_presentation) %></h2>
    </div>
    <div class="col-lg-4">
      <p class="pull-right">
        <br>
        <%= link_to t(:main_read_everything).upcase, t(:about_us_url), class: 'btn btn-green' %>
      </p>
    </div>
  </div>
</div>

<div id="services">
  <div class="container">
    <div class="row mt">

      <% @services.each do |service| %>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <div class="centered">
            <%= fa_icon service[:icon_name] %>
          </div>
          <div>
            <h3 class="centered"><%= service[:name] %></h3>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div> <!-- #services -->

<div id="portfolio">
  <div class="container">
    <div class="row mt">
      <ul class="grid effect-2" id="grid">

        <% @portfolio_items.each do |portfolio_item| %>
          <li>
            <%= image_tag "pages/main/portfolio-items/#{portfolio_item[:image_name]}" %>
            <p class="fading-text"><%= portfolio_item[:title] %></p>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div> <!-- #portfolio -->

<div id="lg">
  <h3 class="partners-title"><%= t(:main_partners_title) %></h3>
  <div class="container">
    <div class="row centered">

      <% @partners.each do |partner| %>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
          <%= image_tag "pages/main/partners/#{partner[:image_name]}", class: 'grayscale' %>
        </div>
      <% end %>

    </div>
  </div>
</div> <!-- #lg -->
